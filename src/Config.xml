<?xml version = "1.0" encoding="UTF-8"?>
<switch>
    <!--Auto get the server ip.-->
    <config key = "autoGetIp" value="false" />
    <!--The server listen ip.-->
    <config key = "ip" value="10.250.11.43" />
    <!--The server listening port.-->
    <config key = "port" value="7909" />
    <!--The socket accept backlog count.-->
    <config key = "backLog" value="1000" />

    <!--The read thread pool config-->
    <!--The number of threads to keep in the pool-->
    <config key = "readCorePoolSize" value="20" />
    <!--The maximum number of threads to allow in the pool-->
    <config key = "readMaximumPoolSize" value="1000" />
    <!--When the number of threads is greater than
    the core, this is the maximum time that excess idle threads
    will wait for new tasks before terminating.-->
    <config key = "readKeepAliveTime" value="300" />

    <!--The write thread pool config-->
    <!--The number of threads to keep in the pool-->
    <config key = "writeCorePoolSize" value="20" />
    <!--The maximum number of threads to allow in the pool-->
    <config key = "writeMaximumPoolSize" value="1000" />
    <!--When the number of threads is greater than
    the core, this is the maximum time that excess idle threads
    will wait for new tasks before terminating.-->
    <config key = "writeKeepAliveTime" value="300" />

    <!--The data config-->
    <!--Receive the data with Header {@link com.hb.pocket.data.header.Header}-->
    <config key = "readDataWithHeader" value="true" />
    <!--Send the data with Header {@link com.hb.pocket.data.header.Header}-->
    <config key = "writeDataWithHeader" value="true" />
    <!--The data encryption type 0: the data is raw 1: md5-->
    <config key = "encryptionType" value="1" />

</switch>